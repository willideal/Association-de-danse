{% extends 'ADCoreBundle:menudroite.html.twig' %}

{% block body %}
<table>
<h1>Planning Hebdomadaire</h1>
	<TR>
             <TH>Jour</TH>
			 <TH>Heure Début</TH>
			 <TH>Heure Fin</TH>
			 <TH>Professeur</TH>
			 <TH>Salle</TH>
			 <TH>Danse</TH>
			 <TH>Niveau</TH>
			 <TH>Modification</TH>
			 <TH>Suppression</TH>
    </TR>
{% for co in cours %}
    <tr>
	<td>{{ co.jourcourshebdo }}</td>
	<td>{{ co.heuredebutcourshebdo|date('H:i') }}</td>
	<td>{{ co.heurefincourshebdo|date('H:i') }}</td>
	<td>{{ co.idprof }}</td>
	<td>{{ co.idsalle }}</td>
	<td>{{ co.iddanse }}</td>
	<td>{{ co.idniveau }}</td>
	
	<td><a href="{{ path('ad_cours_modifier', { 'id': co.idcourshebdo }) }}"><img src="{{ asset('bundles/adcore/images/b_edit.png') }}" alt="Modifier"/></a></td>
	<td><a href="{{ path('ad_cours_supprimer', { 'id': co.idcourshebdo }) }}"><img src="{{ asset('bundles/adcore/images/b_drop.png') }}" alt="Supprimer"/></a></td>
	<td></td>
	
{% else %}
    <tr>
	<td>Aucun cours n'a été trouvé.</td>
    </tr>
{% endfor %}
</table>

</br></br></br><p> <a href="{{ path('ad_cours_ajouter') }}">Ajouter un cours</a><p>
{% endblock %}
