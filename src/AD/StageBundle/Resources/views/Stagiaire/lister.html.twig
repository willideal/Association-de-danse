{% extends 'ADCoreBundle:layout.html.twig' %}

{% block body %}

<table>
<h1>Les Stagiaire</h1>
	<TR>
             <TH>Nom</TH>
			 <TH>Prenom</TH>
			 <TH>Tel</TH>
			 <TH>Stage<TH>
			 <TH>Modification</TH>
			 <TH>Suppression</TH>
    </TR>


{% for d in Stagiaire %}
    <tr>
	<td>{{ d.nomstagiaire }}</td>
	<td>{{ d.prenomstagiaire }}</td>
	<td>{{ d.telstagiaire }}</td>
	<td>{{ d.idstage }}</td>
	<td><a href="{{ path('ad_stagiaire_modifier', { 'id': d.id }) }}">Modifier</a></td>
	<td><a href="{{ path('ad_stagiaire_delete', { 'id': d.id }) }}">Supprimer</a></td>
	<td></td>
	
{% else %}
    <tr>
	<td>Aucun stagiaire n'a été trouvé.</td>
    </tr>
{% endfor %}

</table>

</br></br><p> <a href="{{ path('ad_stagiaire_ajouter') }}">Ajouter un stagiaire</a><p>
{% endblock %}
