{% extends 'ADCoreBundle:menuevenement.html.twig' %}

{% block body %}
<table>
<h1>Nos Soirées</h1>
	<TR>
             <TH>Nom</TH>
			 <TH>Date Soirée</TH>
			 <TH>Heure Début</TH>
			 <TH>Heure Fin</TH>
			 <TH>Dress Code</TH>
			 <TH>Tarif</TH>
    </TR>
{% for s in soirees %}
    <tr>
	<td>{{ s.intitule }}</td>
	<td>{{ s.datesoiree|date('Y-m-d') }}</td>
	<td>{{ s.heuredebutsoiree|date('H:i') }}</td>
	<td>{{ s.heurefinsoiree|date('H:i') }}</td>
	<td>{{ s.dressecode }}</td>
	<td>{{ s.tarifsoiree }} €</td>
	<td></td>
	
{% else %}
    <tr>
	<td>Aucune soirée n'a été trouvé.</td>
    </tr>
{% endfor %}
</table>

